{
  "name": "web-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:dev": "ng serve --configuration development",
    "start:prod": "ng serve --configuration production",
    "start:open": "ng serve --open",
    "build": "ng build",
    "build:dev": "ng build --configuration development",
    "build:prod": "ng build --configuration production",
    "build:analyze": "ng build --configuration production --stats-json && npx webpack-bundle-analyzer dist/web-app/browser/stats.json",
    "watch": "ng build --watch --configuration development",
    "watch:prod": "ng build --watch --configuration production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "test:debug": "jest --detectOpenHandles --verbose",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "lint:ci": "ng lint --format=json --output-file=lint-results.json",
    "format": "prettier --write \"src/**/*.{ts,html,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss}\"",
    "check": "npm run lint && npm run format:check && npm run test:ci",
    "check:fix": "npm run lint:fix && npm run format && npm run test:ci",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf ./dist ./coverage ./.angular",
    "clean:all": "npm run clean && rm -rf ./node_modules && npm install",
    "prebuild": "npm run clean",
    "prebuild:prod": "npm run check",
    "ci:install": "npm ci --ignore-scripts",
    "ci:clean": "rm -rf ./dist",
    "ci:test": "jest --coverage --watchAll=false",
    "ci:build": "ng build --configuration production",
    "ci:full": "npm run ci:clean && npm run ci:test && npm run ci:build",
    "docker:build": "docker build -f Dockerfile.production -t webapp-prod . --load",
    "docker:run": "docker run -d -p 8080:80 --name webapp-test webapp-prod",
    "docker:stop": "docker stop webapp-test && docker rm webapp-test",
    "docker:test": "npm run docker:build && npm run docker:run",
    "prepare": "cd .. && husky install"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.3",
    "@angular/common": "^20.1.3",
    "@angular/compiler": "^20.1.3",
    "@angular/core": "^20.1.3",
    "@angular/forms": "^20.1.3",
    "@angular/platform-browser": "^20.1.3",
    "@angular/platform-browser-dynamic": "^20.1.3",
    "@angular/router": "^20.1.3",
    "@tailwindcss/cli": "^4.1.11",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.11",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.3",
    "@angular/cli": "^20.1.3",
    "@angular/compiler-cli": "^20.1.3",
    "@angular/localize": "^20.1.3",
    "@types/jest": "^30.0.0",
    "angular-eslint": "20.1.1",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-preset-angular": "^14.4.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "8.34.1"
  }
}
