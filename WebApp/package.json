{
  "name": "web-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "bunx @angular/cli",
    "start": "bunx @angular/cli serve",
    "start:dev": "bunx @angular/cli serve --configuration development",
    "start:prod": "bunx @angular/cli serve --configuration production",
    "start:open": "bunx @angular/cli serve --open",
    "build": "bunx @angular/cli build",
    "build:dev": "bunx @angular/cli build --configuration development",
    "build:prod": "bunx @angular/cli build --configuration production",
    "build:analyze": "bunx @angular/cli build --configuration production --stats-json && bunx webpack-bundle-analyzer dist/web-app/browser/stats.json",
    "watch": "bunx @angular/cli build --watch --configuration development",
    "watch:prod": "bunx @angular/cli build --watch --configuration production",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:ci": "bun test --coverage",
    "test:debug": "bun test --verbose",
    "lint": "bunx @angular/cli lint",
    "lint:fix": "bunx @angular/cli lint --fix",
    "lint:ci": "bunx @angular/cli lint --format=json --output-file=lint-results.json",
    "format": "bunx prettier --write \"src/**/*.{ts,html,scss}\"",
    "format:check": "bunx prettier --check \"src/**/*.{ts,html,scss}\"",
    "check": "bun run lint && bun run format:check && bun run test:ci",
    "check:fix": "bun run lint:fix && bun run format && bun run test:ci",
    "typecheck": "bunx tsc --noEmit",
    "clean": "rm -rf ./dist ./coverage ./.angular",
    "clean:all": "bun run clean && rm -rf ./node_modules && bun install",
    "prebuild": "bun run clean",
    "prebuild:prod": "bun run check",
    "ci:install": "bun install --frozen-lockfile",
    "ci:clean": "rm -rf ./dist",
    "ci:test": "bun run test:ci",
    "ci:build": "bunx @angular/cli build --configuration production",
    "ci:full": "bun run ci:clean && bun run ci:test && bun run ci:build",
    "docker:build": "docker build -f Dockerfile.production -t webapp-prod . --load",
    "docker:run": "docker run -d -p 8080:80 --name webapp-test webapp-prod",
    "docker:stop": "docker stop webapp-test && docker rm webapp-test",
    "docker:test": "bun run docker:build && bun run docker:run"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.3",
    "@angular/common": "^20.1.3",
    "@angular/compiler": "^20.1.3",
    "@angular/core": "^20.1.3",
    "@angular/forms": "^20.1.3",
    "@angular/platform-browser": "^20.1.3",
    "@angular/platform-browser-dynamic": "^20.1.3",
    "@angular/router": "^20.1.3",
    "@ng-icons/bootstrap-icons": "^32.1.0",
    "@ng-icons/core": "^32.1.0",
    "@ng-icons/heroicons": "^32.1.0",
    "@ng-icons/simple-icons": "^32.1.0",
    "@tailwindcss/cli": "^4.1.12",
    "@tailwindcss/postcss": "^4.1.12",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.12",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.3",
    "@angular/cli": "^20.1.3",
    "@angular/compiler-cli": "^20.1.3",
    "@angular/localize": "^20.1.3",
    "angular-eslint": "20.2.0",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.40.0",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
